<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:FlowPanel>
        <g:HTMLPanel>
            <style>
                pre {
                    background: #455A64;
                    color: white;
                    margin: 0;
                    padding: 20px 10px;
                    box-sizing: border-box;
                }

                pre {
                    counter-reset: linenum;
                }
                code span.line {
                    counter-increment: linenum;
                }
                code span.line::before {
                    content: counter(linenum);
                    text-align: right;
                    display: block;
                    padding-right: 25px;
                    color: #B0BEC5;
                }
                .line {
                    display: flex;
                }
                .string, .comment {
                   color: #8bc34a;
                }
                .punct {
                    color: orange;
                }
                .new {
                    color: orange;
                }
                .class {
                    color: orange;
                }
                .keyword , .modifier{
                    color: orange;
                }
                .annotation {
                    color: #ffeb3b;
                }
                .capital {
                    color: #BA68C8;
                }
                .comment {
                    color: #90A4AE !important;
                }
            </style>
            <pre>
                <code ui:field="code"></code>
            </pre>
        </g:HTMLPanel>
    </g:FlowPanel>
</ui:UiBinder>