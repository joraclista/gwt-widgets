<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            width: 100%;
            display: flex;
            flex-direction: column;
        }
        .header {
            width: 100%;
            background: #B0BEC5;
            padding: 15px;
            font-weight: bold;
            box-shadow: 3px 3px 20px rgba(0, 0, 0, 0.5);

        }
        .panel {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
        }

        .panel > div {
            margin: 30px;
            display: flex;
            flex-grow: 0;
        }

    </ui:style>
    <g:FlowPanel addStyleNames="{style.main}">
        <g:Label addStyleNames="{style.header}" ui:field="header"/>
        <g:FlowPanel addStyleNames="{style.panel}" ui:field="panel"/>
    </g:FlowPanel>
</ui:UiBinder>